<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="fleet_vehicle_request_tree_view" model="ir.ui.view">
            <field name="name">fleet.vehicle.request.tree</field>
            <field name="model">fleet.vehicle.request</field>
            <field name="arch" type="xml">
                <list>
                    <field name="request_date"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="purpose"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="fleet_vehicle_request_form_view" model="ir.ui.view">
            <field name="name">fleet.vehicle.request.form</field>
            <field name="model">fleet.vehicle.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rejected"/>
                        <button name="action_submit" string="Submit" type="object" invisible="state != 'draft'" groups="create_data.group_dept_manager"/>
                        <button name="action_approve" string="Approve" type="object" invisible="state != 'submitted'" groups="create_data.group_hr_manager"/>
                        <button name="action_reject" string="Reject" type="object" invisible="state != 'submitted'" groups="create_data.group_hr_manager"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="requested_by"/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                            </group>
                            <group>
                                <field name="request_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="purpose"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="fleet_vehicle_request_action" model="ir.actions.act_window">
            <field name="name">Vehicle Requests</field>
            <field name="res_model">fleet.vehicle.request</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Inherit Fleet Vehicle Form to add Department field -->
        <record id="fleet_vehicle_form_inherit_department" model="ir.ui.view">
            <field name="name">fleet.vehicle.form.inherit.department</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='license_plate']" position="after">
                    <field name="department_id"/>
                </xpath>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="fleet_vehicle_request_menu" name="Vehicle Requests" parent="fleet.menu_root" action="fleet_vehicle_request_action"/>
    </data>
</odoo>